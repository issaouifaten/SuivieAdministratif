<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     >


<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_echek_2"
    android:layout_marginBottom="40dp"
    tools:context=".ui.statistique_rapport_activite.Fournisseur.SuivieCommandeFrs">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">


                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/buttonround">


                    <TextView
                        android:id="@+id/txt_date_debut"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:text="10/10/2019"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:textColor="@color/colorPrimary2"
                        android:layout_toStartOf="@+id/img1"
                        android:layout_centerVertical="true" />

                    <ImageView

                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_calendar"/>

                </RelativeLayout>

                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:background="@drawable/buttonround">


                    <TextView
                        android:id="@+id/txt_date_fin"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#00000000"
                        android:gravity="center"
                        android:text="10/10/2019"
                        android:textStyle="bold"
                        android:textSize="15dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="40dp"
                        android:textColor="@color/colorPrimary2"
                        android:layout_toStartOf="@+id/img1"
                        android:layout_centerVertical="true" />

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:foregroundGravity="center"
                        android:src="@drawable/ic_calendar"/>

                </RelativeLayout>

            </LinearLayout>


            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Depot"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary2"/>

                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/buttonround"
                            android:gravity="center">


                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/sp_depot"
                                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="5dp"
                                tools:targetApi="lollipop" />


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="2dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_arrow_sp_" />

                        </RelativeLayout>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <TextView
                            android:layout_width="150dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:text="Nature Article"
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="@color/colorPrimary2"/>
                        <RelativeLayout
                            xmlns:android="http://schemas.android.com/apk/res/android"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:background="@drawable/buttonround"
                            android:gravity="center">


                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/sp_nature_article"
                                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="5dp"
                                tools:targetApi="lollipop" />


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="2dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_arrow_sp_" />

                        </RelativeLayout>

                    </LinearLayout>
                </LinearLayout>





                <TextView
                    android:layout_width="150dp"
                    android:layout_height="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="70dp"
                    android:text="Article"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrimary2"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:layout_marginTop="95dp">


                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/buttonround"
                        android:gravity="center"
                        android:layout_weight="1">

                        <SearchView
                            android:id="@+id/search_bar_article"
                            android:layout_width="match_parent"
                            android:hint="Rechercher Client"
                            android:layout_height="50dp">
                        </SearchView>




                        <!--
                            <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                android:id="@+id/sp_article"
                                style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="#00000000"
                                android:clickable="true"
                                android:gravity="center"
                                android:padding="5dp"
                                tools:targetApi="lollipop" />


                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="40dp"
                                android:layout_alignParentEnd="true"
                                android:layout_margin="2dp"
                                android:padding="5dp"
                                android:src="@drawable/ic_arrow_sp_" />

                                -->

                    </RelativeLayout>

                    <Button
                        android:id="@+id/btn_pourcent"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:text="%"
                        android:background="@drawable/buttonround"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:textColor="@color/colorPrimary2"></Button>

                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_marginTop="145dp">

                    <!--    <Button
                            android:id="@+id/btreload"
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:background="@drawable/reload" /> -->


                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_list_suivi_cmd_frns"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:divider="#00000000"
                        android:dividerHeight="1dp"
                        android:layout_marginBottom="60dp"/>




                </LinearLayout>



                <ProgressBar
                    android:id="@+id/pb_bc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"/>

            </RelativeLayout>


        </LinearLayout>








    </RelativeLayout>

    <include layout="@layout/bottom_sheet_total_suivie_cmd_frns" />





</androidx.coordinatorlayout.widget.CoordinatorLayout>


    <include layout="@layout/banniere_societe" />

</androidx.constraintlayout.widget.ConstraintLayout>