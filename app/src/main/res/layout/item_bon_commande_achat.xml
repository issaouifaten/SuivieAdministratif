<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_bon_commande_achat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:clickable="true"

        card_view:cardBackgroundColor="#edfcf9f9"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="6dp" >


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cadre_jaune">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
           android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_achat" />

                    <TextView
                        android:id="@+id/txt_num_ba"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginBottom="3dp"
                        android:layout_marginLeft="5dp"
                        android:text="BT19/00001"
                        android:textColor="@color/blue"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>



            </RelativeLayout>

            <View
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/NumCmd"
                android:layout_marginTop="5dp"
                android:background="#d9d9d9"
                android:padding="15dp" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="right">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/txt_libelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15dp"
                    android:textColor="@color/blue"
                    android:text="Achat"

                    android:typeface="serif"/>


            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_below="@+id/NumCmd"
                android:layout_marginTop="5dp"
                android:background="#d9d9d9"
                android:padding="15dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:layout_gravity="right"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_code_frns"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="d12596"
                        android:typeface="serif"
                        android:textColor="@color/colorPrimary"/>


                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="15dp"
                        android:src="@drawable/ic_transfert_5"
                   />


                    <TextView
                        android:id="@+id/txt_raison_fournisseur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="15dp"
                        android:textStyle="bold"
                        android:text="DEPOT 02"
                        android:typeface="serif"
                        android:textColor="@color/colorPrimary"/>

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/txt_detail_libelle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" Détail Achat "
                    android:typeface="monospace"
                    android:gravity="center"
                    android:layout_gravity="center"/>


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"

                    card_view:cardBackgroundColor="#edfff8f8"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="6dp"
                    card_view:contentPadding="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="190dp"
                            android:layout_height="wrap_content"
                            android:textSize="10dp"
                            android:text="Designation Article"
                            android:typeface="serif"
                            android:layout_weight="1"/>


                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="Qt cmd"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:typeface="serif" />

                        <TextView
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="Qt livré"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:typeface="serif" />

                        <TextView
                            android:id="@+id/txt_libelle_rep_stock"
                            android:layout_width="80dp"
                            android:layout_height="match_parent"
                            android:text="Reliquat"
                            android:textSize="10dp"
                            android:layout_weight="1"
                            android:typeface="serif" />

                    </LinearLayout>


                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
                    android:id="@+id/card_list_detail_achat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginBottom="20dp"
                    card_view:cardBackgroundColor="#edfff8f8"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="6dp"
                    card_view:cardMaxElevation="6dp"
                    card_view:contentPadding="5dp">


                  <LinearLayout
                        android:id="@+id/ll_list_detail_achat"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                    <ListView
                        android:id="@+id/lv_list_detail_achat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                   </LinearLayout>


                </androidx.cardview.widget.CardView>






            </LinearLayout>

        </LinearLayout>



            <TextView
                android:id="@+id/txt_date_bon_achat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:text="19/09/2019"
                android:textSize="15dp"
                android:typeface="serif" />



            <TextView
                android:id="@+id/txt_tot_ht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="10.2255"
                android:textColor="@color/colortxt"
                android:textSize="15dp"
                android:textStyle="italic|bold"
                android:typeface="serif"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>


            <TextView
                android:id="@+id/txt_etablie_par"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="Etablie  par : ---"
                android:textColor="@color/colortxt"
                android:textSize="10dp"
                android:textStyle="italic|bold"
                android:typeface="serif"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>