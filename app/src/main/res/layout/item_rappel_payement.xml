<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:orientation="horizontal">


    <androidx.cardview.widget.CardView

        android:id="@+id/item_rappel_payement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginTop="5dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#fffffe"
        card_view:cardCornerRadius="2dp">

        <!--     card_view:cardElevation="6dp"
          android:foreground="?android:attr/selectableItemBackground"
        card_view:cardMaxElevation="6dp" -->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <View
                    android:id="@+id/view_entree_sorti"
                    android:layout_width="5dp"
                    android:layout_height="match_parent"
                    android:background="@color/color_info_panier" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/txt_operation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:text="Bon Livraison"
                            android:textSize="12dp"
                            android:typeface="monospace" />


                        <TextView
                            android:id="@+id/txt_num_piece"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:text="BL001339"
                            android:textColor="@color/blue"
                            android:textSize="12dp"
                            android:typeface="monospace" />

                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="5dp"
                        android:background="@color/rouge_clair2" />


                    <TextView
                        android:id="@+id/txt_date_piece"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_marginRight="70dp"
                        android:layout_marginTop="2dp"
                        android:gravity="center_vertical"
                        android:text="11/12/2019"
                        android:textSize="9dp"
                        android:typeface="serif" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginRight="2dp"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView
                                android:id="@+id/txt_libelle_etree"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text=" "
                                android:textColor="@color/GreenCall"
                                android:typeface="monospace" />




                            <LinearLayout

                                android:visibility="invisible"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_green_call_cadre"
                                android:clickable="true"
                                android:elevation="6dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">



                            <TextView
                                android:id="@+id/txt_entree"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="2dp"
                                android:background="#00000000"
                                android:text=" 2000.20 "
                                android:textAllCaps="false"
                                android:textColor="@color/GreenCall" />

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Montant "
                                android:textColor="@color/blue"
                                android:typeface="monospace" />

                            <LinearLayout
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_cadre_blue"
                                android:clickable="true"
                                android:elevation="6dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">


                                <TextView
                                    android:id="@+id/txt_montant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:background="#00000000"
                                    android:text=" 2000.20 "
                                    android:textAllCaps="false"
                                    android:textColor="@color/blue" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txt_libelle_sortie"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Restant "
                                android:textColor="@color/colorPrimary"
                                android:typeface="monospace" />

                            <LinearLayout
                                android:id="@+id/btn_fiche_client"
                                android:layout_width="120dp"
                                android:layout_height="match_parent"
                                android:layout_alignParentRight="true"
                                android:layout_margin="2dp"
                                android:layout_weight="1"
                                android:background="@drawable/round_red_edit_box_error"
                                android:clickable="true"
                                android:elevation="6dp"
                                android:gravity="center"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp"
                                android:paddingRight="10dp">


                                <TextView
                                    android:id="@+id/txt_restant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="2dp"
                                    android:background="#00000000"
                                    android:text=" 2000.20 "
                                    android:textAllCaps="false"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
