<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Production.Module_Production">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_echek_2"
     >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">



                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="2dp"
                        android:background="@drawable/buttonround">


                        <TextView
                            android:id="@+id/txt_date_fin"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="40dp"
                            android:layout_toStartOf="@+id/img1"
                            android:background="#00000000"
                            android:gravity="center"
                            android:text="10/10/2019"
                            android:textColor="@color/colorPrimary2"
                            android:textSize="15dp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="40dp"
                            android:layout_margin="10dp"
                            android:layout_alignParentEnd="true"
                            android:foregroundGravity="center"
                            android:src="@drawable/ic_calendar"/>

                    </RelativeLayout>

                </LinearLayout>


                <RelativeLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    xmlns:tools="http://schemas.android.com/tools"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Cannelure "
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary2"/>

                            <RelativeLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/buttonround"
                                android:gravity="center">


                                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                    android:id="@+id/sp_Cannelure"
                                    style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    tools:targetApi="lollipop" />


                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="2dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_arrow_sp_" />

                            </RelativeLayout>

                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text=" Machine "
                                android:textSize="15dp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary2"/>
                            <RelativeLayout
                                xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/buttonround"
                                android:gravity="center">


                                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                    android:id="@+id/sp_Machine"
                                    style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    tools:targetApi="lollipop" />


                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="2dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_arrow_sp_" />

                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="75dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="150dp"
                                android:layout_height="25dp"
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="5dp"
                                android:text="Client"
                                android:textColor="@color/colorPrimary2"
                                android:textSize="15dp"
                                android:textStyle="bold" />

                            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@drawable/buttonround"
                                android:gravity="center">


                                <com.toptoche.searchablespinnerlibrary.SearchableSpinner
                                    android:id="@+id/sp_Client"
                                    style="@android:style/Widget.Material.Light.Spinner.Underlined"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_weight="1"
                                    android:background="#00000000"
                                    android:clickable="true"
                                    android:gravity="center"
                                    android:padding="5dp"
                                    tools:targetApi="lollipop" />


                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="40dp"
                                    android:layout_alignParentEnd="true"
                                    android:layout_margin="2dp"
                                    android:padding="5dp"
                                    android:src="@drawable/ic_arrow_sp_" />

                            </RelativeLayout>

                        </LinearLayout>
                    </LinearLayout>









                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_marginTop="220dp">



                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_list_suivi_cmd_frns"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:divider="#00000000"
                            android:dividerHeight="1dp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pb_bc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"/>

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>




    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include layout="@layout/banniere_societe" />

</androidx.constraintlayout.widget.ConstraintLayout>