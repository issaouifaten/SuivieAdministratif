<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.tresorerie.ImpayeFournisseurActivity">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_echek_2"
        tools:context=".module.vente.EtatCommande">


        <androidx.drawerlayout.widget.DrawerLayout
            android:id="@+id/drawer_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            tools:openDrawer="start">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    tools:context="com.example.faten.testsql.activity.HistoriqueBonCommande">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">



                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp"

                            app:cardBackgroundColor="#edfcf9f9"
                            app:cardCornerRadius="5dp"
                            app:cardElevation="6dp"
                            app:cardMaxElevation="2dp"
                            >

                            <FrameLayout
                                android:id="@+id/farme_card"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/card_edge_red">

                            </FrameLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="5dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical">



                                    <TextView
                                        android:id="@+id/txt_libelle_etat"
                                        android:layout_width="wrap_content"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:text="Total  "
                                        android:textColor="@color/color_g_7"
                                        android:textStyle="italic|bold"
                                        android:typeface="serif" />


                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="bottom"
                                        android:orientation="horizontal">



                                        <TextView
                                            android:id="@+id/libelle_ht"
                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"
                                            android:text=" "
                                            android:textColor="@color/colortxt"
                                            android:typeface="serif"
                                            android:layout_weight="1"/>


                                        <TextView

                                            android:layout_width="80dp"
                                            android:layout_height="wrap_content"

                                            android:textColor="@color/colortxt"
                                            android:typeface="serif"
                                            android:layout_weight="1"
                                            />


                                        <TextView
                                            android:id="@+id/libelle_ttc"
                                            android:layout_width="80dp"
                                            android:layout_height="match_parent"
                                            android:layout_weight="1"
                                            android:gravity="right"
                                            android:text="Total ImpayÃ©"
                                            android:textColor="@color/colortxt"
                                            android:typeface="serif" />







                                    </LinearLayout>



                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="right"
                                        android:gravity="bottom"
                                        android:orientation="horizontal">



                                        <TextView
                                            android:id="@+id/txt_tot_ht"
                                            android:layout_width="80dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="5dp"
                                            android:text="  "
                                            android:textColor="@color/blue"
                                            android:autoSizeMaxTextSize="15dp"
                                            android:autoSizeMinTextSize="12sp"
                                            android:textStyle="italic|bold"
                                            android:typeface="serif"
                                            android:layout_weight="1"/>


                                        <TextView

                                            android:layout_width="80dp"
                                            android:layout_height="20dp"

                                            android:textColor="@color/blue"
                                            android:autoSizeMaxTextSize="15dp"
                                            android:autoSizeMinTextSize="12sp"
                                            android:textStyle="italic|bold"
                                            android:layout_weight="1"
                                            android:typeface="serif"
                                            />



                                        <TextView
                                            android:id="@+id/txt_total_impaye"
                                            android:layout_width="80dp"
                                            android:layout_height="20dp"
                                            android:layout_marginLeft="5dp"
                                            android:autoSizeMaxTextSize="15dp"
                                            android:autoSizeMinTextSize="12sp"
                                            android:autoSizeStepGranularity="2sp"
                                            android:autoSizeTextType="uniform"
                                            android:text="---.---"
                                            android:textColor="@color/color_g_1"
                                            android:textStyle="italic|bold"
                                            android:layout_weight="1"
                                            android:typeface="serif"
                                            android:gravity="right"

                                            />





                                    </LinearLayout>


                                </LinearLayout>




                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>


                        <ExpandableListView
                            android:id="@+id/elv_list"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft"

                            android:divider="#00000000"
                            android:dividerHeight="0.5dp"
                            android:layout_marginBottom="50dp"/>

                    </LinearLayout>

                    <ProgressBar
                        android:id="@+id/pb_bc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true" />

                </RelativeLayout>

            </LinearLayout>


            <com.google.android.material.navigation.NavigationView
                android:id="@+id/nav_view"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:fitsSystemWindows="true"
                app:headerLayout="@layout/menu_achat" />


        </androidx.drawerlayout.widget.DrawerLayout>


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        layout="@layout/banniere_societe"
        tools:layout_editor_absoluteY="814dp" />




</androidx.constraintlayout.widget.ConstraintLayout>