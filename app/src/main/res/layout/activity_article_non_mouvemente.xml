<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.statistique_rapport_activite.article.ArticleNonMouvementeActivity">


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_margin="10dp"
        android:background="@drawable/buttonround">


        <SearchView
            android:id="@+id/search_bar"
            android:layout_width="match_parent"
            android:hint="Rechercher Client"
            android:layout_height="50dp">
        </SearchView>


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="60dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        card_view:cardBackgroundColor="#edfcf9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="2dp"
        >

        <FrameLayout
            android:id="@+id/farme_card"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_edge_red">

        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">



                <TextView
                    android:id="@+id/txt_libelle_etat"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:text="Total  "
                    android:textColor="@color/color_g_7"
                    android:textStyle="italic|bold"
                    android:typeface="serif" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">



                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="QT Stock"
                        android:textColor="@color/colortxt"
                        android:typeface="serif"
                        android:layout_weight="1"/>


                    <TextView

                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="QT Achat"
                        android:textColor="@color/colortxt"
                        android:typeface="serif"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/libelle_tva"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"

                        android:textColor="@color/colortxt"
                        android:typeface="serif"
                        android:layout_weight="1"
                        />


                    <TextView
                        android:id="@+id/libelle_ttc"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="HT"
                        android:textColor="@color/colortxt"
                        android:typeface="serif"
                        android:layout_weight="1"
                        android:gravity="right"/>







                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txt_qt_stock"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:text="----.---"
                        android:textColor="@color/blue"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:textStyle="italic|bold"
                        android:typeface="serif"
                        android:layout_weight="1"/>


                    <TextView
                        android:id="@+id/txt_qt_achat"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:text="---.---"
                        android:textColor="@color/blue"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:textStyle="italic|bold"
                        android:layout_weight="1"
                        android:typeface="serif"
                        />

                    <TextView
                        android:id="@+id/txt_total_tva"
                        android:layout_width="80dp"
                        android:layout_height="20dp"

                        android:textColor="@color/blue"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:textStyle="italic|bold"
                        android:layout_weight="1"
                        android:typeface="serif"
                        />



                    <TextView
                        android:id="@+id/txt_total_ht"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:text="----.---"
                        android:textColor="@color/color_g_1"
                        android:textStyle="italic|bold"
                        android:layout_weight="1"
                        android:typeface="serif"
                        android:gravity="right"

                        />





                </LinearLayout>


            </LinearLayout>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/pb"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerInParent="true"/>

    <ListView
        android:id="@+id/lv_list_art_nn_mvmnt"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:divider="#00000000"
        android:dividerHeight="1dp"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="50dp"/>

    <include layout="@layout/banniere_societe" />

</RelativeLayout>