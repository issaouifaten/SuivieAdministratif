<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_bon_commande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        card_view:cardBackgroundColor="#edfcf9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="2dp"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/ic_customer" />

                        <TextView
                            android:id="@+id/txt_raison_social"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="5dp"
                            android:layout_marginBottom="3dp"
                            android:text="Bhsqdsq1"
                            android:textColor="@color/color_g_1"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:layout_below="@+id/NumCmd"
                    android:layout_marginTop="5dp"
                    android:background="#d9d9d9"
                    android:padding="15dp" />








                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:text="T.Retenu"
                        android:textColor="@color/colortxt"
                        android:typeface="serif"
                        android:layout_weight="1"/>


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Retenu"
                            android:textColor="@color/colortxt"
                            android:typeface="serif"
                            android:layout_weight="1"/>


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="Brut"
                            android:textColor="@color/colortxt"
                            android:typeface="serif"
                            android:layout_weight="1"
                            />


                        <TextView
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:text="NET"
                            android:textColor="@color/colortxt"
                            android:typeface="serif"
                            android:layout_weight="1"
                            android:gravity="right"/>







                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">



                    <TextView
                        android:id="@+id/txt_taux_retenu"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:text="300000.000"
                        android:textColor="@color/blue"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:textStyle="italic|bold"
                        android:typeface="serif"
                        android:layout_weight="1"/>


                        <TextView
                            android:id="@+id/txt_retenu"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:text="300000.000"
                            android:textColor="@color/blue"
                            android:autoSizeMaxTextSize="15dp"
                            android:autoSizeMinTextSize="12sp"
                            android:textStyle="italic|bold"
                            android:typeface="serif"
                            android:layout_weight="1"/>


                        <TextView
                            android:id="@+id/txt_brut"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:text="30000.000"
                            android:textColor="@color/blue"
                            android:autoSizeMaxTextSize="15dp"
                            android:autoSizeMinTextSize="12sp"
                            android:textStyle="italic|bold"
                            android:layout_weight="1"
                            android:typeface="serif" />



                        <TextView
                            android:id="@+id/txt_net"
                            android:layout_width="100dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="5dp"
                            android:autoSizeMaxTextSize="15dp"
                            android:autoSizeMinTextSize="12sp"
                            android:autoSizeStepGranularity="2sp"
                            android:autoSizeTextType="uniform"
                            android:text="30000.000"
                            android:textColor="@color/color_g_1"
                            android:textStyle="italic|bold"
                            android:layout_weight="1"
                            android:typeface="serif"
                            android:gravity="right"

                            />





                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/txt_date_retenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:text="19/09/2019"
                android:textSize="15dp"
                android:typeface="serif" />


        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>