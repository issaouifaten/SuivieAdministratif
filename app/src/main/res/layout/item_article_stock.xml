<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:id="@+id/item_bon_commande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#edfcf9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_article" />


                    <TextView
                        android:id="@+id/txt_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="  Designtaion  "
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>


                <TextView
                    android:id="@+id/txt_code_article"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="001"
                    android:textSize="10dp"
                    android:textColor="@color/colortxt"
                    android:typeface="serif"
                    android:layout_marginLeft="80dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Achat HT"
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Mnt. TVA "
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Montant TTC"
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />



                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:text="Quantité"
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/txt_prix_achat_ht"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:text="300.000"
                        android:textColor="@color/blue"
                        android:textStyle="italic|bold"
                        android:typeface="serif" />


                    <TextView
                        android:id="@+id/txt_mnt_tva"
                        android:layout_width="80dp"
                        android:layout_height="20dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:text="300.000"
                        android:textColor="@color/blue"
                        android:textStyle="italic|bold"
                        android:typeface="serif" />


                    <TextView
                        android:id="@+id/txt_prix_ttc"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_weight="1"
                        android:autoSizeMaxTextSize="15dp"
                        android:autoSizeMinTextSize="12sp"
                        android:autoSizeStepGranularity="2sp"
                        android:autoSizeTextType="uniform"
                        android:gravity="right"
                        android:text="300.000"
                        android:textColor="@color/color_g_1"
                        android:textStyle="italic|bold"
                        android:typeface="serif"

                        />


                    <LinearLayout
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:gravity="right"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/txt_quantite"
                            android:layout_width="50dp"
                            android:layout_height="20dp"

                            android:text="3000"
                            android:padding="2dp"
                            android:gravity="center"
                            android:background="@drawable/round_intervenant"
                            android:textColor="@color/white"
                            android:textStyle="italic|bold"
                            android:typeface="serif" />

                    </LinearLayout>




                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/btn_fiche_article"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/card_edge_green"
                        android:elevation="6dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_fiche_article"
                            android:layout_marginRight="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:background="#00000000"
                            android:gravity="center"
                            android:text=" Fiche Article"
                            android:textAllCaps="false"
                            android:textColor="#009688"
                              />

                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/btn_stock_ala_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/card_edge_red"
                        android:elevation="6dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_etat_stock"
                            android:layout_marginRight="2dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" Stock à la date  "
                            android:textAllCaps="false"
                            android:background="#00000000"
                            android:textColor="@color/color_alerte"
                            android:layout_marginLeft="2dp"

                            android:gravity="center"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>