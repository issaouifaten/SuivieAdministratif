<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >


<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/btn_detail_facture"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#40FCF9F9"
    app:cardCornerRadius="5dp"
    app:cardElevation="2dp"
    app:cardMaxElevation="2dp">

    <FrameLayout
        android:id="@+id/frm_pos"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/card_edge_white">

    </FrameLayout>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="50dp">


            <ImageView
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:src ="@drawable/ic_transfert_5"
                android:layout_marginTop="10dp"/>


            <TextView
                android:id="@+id/txt_num_piece"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="num_piece"
                android:textSize="12dp"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="25dp"
             />


            <TextView
                android:id="@+id/txt_date_piece"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="08/02/2020"
                android:textColor="@color/gris"
                android:textSize="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="95dp"
                android:textStyle="italic|bold" />


            <LinearLayout
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@drawable/round_cadre_inter"
                android:clickable="true"
                android:elevation="6dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="2dp"
                android:paddingRight="2dp"
                android:layout_marginTop="10dp">


                <TextView
                    android:id="@+id/txt_mnt_facture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="2dp"
                    android:background="#00000000"
                    android:text=" 2000.20 "
                    android:textAllCaps="false"
                    android:textColor="@color/colorPrimary" />

            </LinearLayout>


        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="2dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="HT"
            android:textColor="@color/colortxt"
            android:textSize="9dp"
            android:textStyle="italic" />

        <TextView

            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="TVA"
            android:textColor="@color/colortxt"
            android:textSize="9dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="Remise"
            android:textColor="@color/colortxt"
            android:textSize="9dp"
            android:textStyle="italic" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:text="T.fiscal"
            android:textColor="@color/colortxt"
            android:textSize="9dp"
            android:textStyle="italic" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_cadre"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/txt_ht"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#00000000"
                android:text=" 2000.20 "
                android:textAllCaps="false"
                android:textColor="@color/blue" />

        </LinearLayout>


        <LinearLayout
            android:id="@+id/ll_mnt_recu"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_cadre"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/txt_tva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#00000000"
                android:text=" 2000.20 "
                android:textAllCaps="false"
                android:textColor="@color/blue" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_cadre"

            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/txt_remise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#00000000"
                android:text=" 2000.20 "
                android:textAllCaps="false"
                android:textColor="@color/blue" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:background="@drawable/round_blue_cadre"
            android:elevation="6dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">


            <TextView
                android:id="@+id/txt_t_fiscal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="2dp"
                android:background="#00000000"
                android:text=" 200.20 "
                android:textAllCaps="false"
                android:textColor="@color/blue" />

        </LinearLayout>
    </LinearLayout>


</LinearLayout>

</androidx.cardview.widget.CardView>

</LinearLayout>