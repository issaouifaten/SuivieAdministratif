<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@android:color/transparent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/txt_mode_reglement"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Mode Règlement"
            android:textColor="@color/gris"
            android:textSize="12dp"
            android:textStyle="italic|bold" />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#c9c9c9" />

        <TextView
            android:id="@+id/txt_reference"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Référence"
            android:textColor="@color/gris"
            android:textSize="12dp"
            android:textStyle="italic|bold"  />

        <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#c9c9c9" />

        <TextView
            android:id="@+id/txt_echeance"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Echéance"
            android:textColor="@color/gris"
            android:textSize="10dp"
            android:textStyle="italic|bold"  />

               <View
            android:layout_width="1dp"
            android:layout_height="fill_parent"
            android:background="#c9c9c9" />



        <TextView
            android:id="@+id/txt_montant_recu"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_gravity="center"
            android:text="Montant Reçu"
            android:textColor="@color/gris"
            android:textSize="12dp"
            android:textStyle="italic|bold"  />


    </LinearLayout>

</LinearLayout>
