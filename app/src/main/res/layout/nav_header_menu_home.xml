<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:background="@drawable/back_login"
    android:gravity="bottom"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"

        android:theme="@style/ThemeOverlay.AppCompat.Dark">




        <ImageView
            android:id="@+id/img_societe"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:contentDescription="@string/nav_header_desc"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:src="@drawable/i2s" />

        <TextView
            android:id="@+id/txt_nom_soc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CCM"
            android:textSize="20dp"
            android:textColor="@color/color_g_7"
            android:textStyle="bold|italic" />


        <TextView
            android:id="@+id/txt_num_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VERSION : V01"
            android:textSize="10dp"
            android:textColor="@color/colortxt"
            android:textStyle="italic" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Contact : ideal software solution "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textStyle="bold"
            android:textColor="@color/color_g_18"/>

    </LinearLayout>
</LinearLayout>
