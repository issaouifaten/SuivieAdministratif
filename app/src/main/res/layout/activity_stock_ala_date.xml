<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.Stock.StockAlaDateActivity"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back_echek_2">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginRight="2dp"

        android:background="@drawable/buttonround"
        android:gravity="center">


        <TextView
            android:id="@+id/txt_date_debut"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"
            android:layout_toStartOf="@+id/img1"
            android:background="#00000000"
            android:gravity="center"
            android:text="10/10/2019"
            android:textColor="@color/colorPrimary2"
            android:textSize="15dp"
            android:textStyle="bold" />

        <ImageView

            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:foregroundGravity="center"
            android:src="@drawable/ic_calendar" />

    </RelativeLayout>







    <androidx.cardview.widget.CardView
        android:id="@+id/item_bon_commande"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        card_view:cardBackgroundColor="#edfcf9f9"
        card_view:cardCornerRadius="5dp"
        card_view:cardElevation="6dp"
        card_view:cardMaxElevation="2dp"
        card_view:contentPadding="5dp"
        tools:ignore="MissingConstraints">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentBottom="true"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_article" />


                    <TextView
                        android:id="@+id/txt_designation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="5dp"
                        android:layout_marginBottom="3dp"
                        android:text="  Designtaion  "
                        android:textColor="@color/colorPrimary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_code_article"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="001"
                        android:textSize="10dp"
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:gravity="bottom"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stock Réel "
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />


                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Stock à la date "
                        android:textColor="@color/colortxt"
                        android:typeface="serif" />




                </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:id="@+id/btn_fiche_article"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/card_edge_green"
                        android:elevation="6dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_etat_stock"
                            android:layout_marginRight="2dp"/>

                        <TextView
                            android:id="@+id/txt_stock_reel"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_gravity="center_vertical"
                            android:layout_marginLeft="2dp"
                            android:background="#00000000"
                            android:gravity="center"
                            android:text="-----"
                            android:textAllCaps="false"
                            android:textColor="#009688"
                            android:textStyle="bold"
                            />

                    </LinearLayout>





                    <LinearLayout
                        android:id="@+id/btn_stock_ala_date"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:clickable="true"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:foreground="?android:attr/selectableItemBackground"
                        android:background="@drawable/card_edge_red"
                        android:elevation="6dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1">


                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/_24h_etat_du_jour"
                            android:layout_marginRight="2dp"/>

                        <TextView
                            android:id="@+id/txt_stock_a_la_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="----"
                            android:textAllCaps="false"
                            android:background="#00000000"
                            android:textColor="@color/color_alerte"
                            android:layout_marginLeft="2dp"

                            android:gravity="center"
                            android:layout_gravity="center_vertical"/>

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>



    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>