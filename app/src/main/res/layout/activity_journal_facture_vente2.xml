<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_echek_2">


        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="5dp"
                tools:context="com.example.faten.testsql.activity.HistoriqueBonCommande">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">


                    <androidx.cardview.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"

                        card_view:cardBackgroundColor="#edfcf9f9"
                        card_view:cardCornerRadius="5dp"
                        card_view:cardElevation="6dp"
                        card_view:cardMaxElevation="2dp">

                        <FrameLayout
                            android:id="@+id/farme_card"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/card_edge_red">

                        </FrameLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">


                                <TextView
                                    android:id="@+id/txt_libelle_etat"
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="5dp"
                                    android:layout_weight="1"
                                    android:text="Total  "
                                    android:textColor="@color/color_g_7"
                                    android:textStyle="italic|bold"
                                    android:typeface="serif" />


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/libelle_ht"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"

                                        android:layout_weight="1"
                                        android:textColor="@color/colortxt"
                                        android:typeface="serif" />


                                    <TextView
                                        android:id="@+id/libelle_tva"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"

                                        android:layout_weight="1"
                                        android:textColor="@color/colortxt"
                                        android:typeface="serif" />


                                    <TextView
                                        android:id="@+id/libelle_ttc"
                                        android:layout_width="80dp"
                                        android:layout_height="wrap_content"
                                        android:layout_weight="1"
                                        android:gravity="right"
                                        android:text="TTC"
                                        android:textColor="@color/colortxt"
                                        android:typeface="serif" />


                                </LinearLayout>


                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="right"
                                    android:gravity="bottom"
                                    android:orientation="horizontal">


                                    <TextView
                                        android:id="@+id/txt_tot_ht"
                                        android:layout_width="80dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"

                                        android:layout_weight="1"
                                        android:autoSizeMaxTextSize="15dp"
                                        android:autoSizeMinTextSize="12sp"
                                        android:textColor="@color/blue"
                                        android:textStyle="italic|bold"
                                        android:typeface="serif" />


                                    <TextView
                                        android:id="@+id/txt_total_tva"
                                        android:layout_width="80dp"
                                        android:layout_height="20dp"

                                        android:layout_weight="1"
                                        android:autoSizeMaxTextSize="15dp"
                                        android:autoSizeMinTextSize="12sp"
                                        android:textColor="@color/blue"
                                        android:textStyle="italic|bold"
                                        android:typeface="serif" />


                                    <TextView
                                        android:id="@+id/txt_total_ttc"
                                        android:layout_width="80dp"
                                        android:layout_height="20dp"
                                        android:layout_marginLeft="5dp"
                                        android:layout_weight="1"
                                        android:autoSizeMaxTextSize="15dp"
                                        android:autoSizeMinTextSize="12sp"
                                        android:autoSizeStepGranularity="2sp"
                                        android:autoSizeTextType="uniform"
                                        android:gravity="right"
                                        android:text="----.---"
                                        android:textColor="@color/color_g_1"
                                        android:textStyle="italic|bold"
                                        android:typeface="serif"

                                        />


                                </LinearLayout>


                            </LinearLayout>


                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <ExpandableListView
                        android:id="@+id/elv_jav"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="2dp"
                        android:layout_marginBottom="50dp"
                        android:divider="@null"
                        android:dividerHeight="0.25dp"
                        android:indicatorLeft="?android:attr/expandableListPreferredItemIndicatorLeft" />


                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>

        <ProgressBar
            android:id="@+id/pb_bc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_anchor="@+id/linearLayout"
            app:layout_anchorGravity="center" />


    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <include
        layout="@layout/banniere_societe"
        tools:layout_editor_absoluteY="814dp" />


</androidx.constraintlayout.widget.ConstraintLayout>